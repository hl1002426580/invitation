/* miniprogram/pages/map/index.wxss */
.full{
  width: 100%;
  height: 100%;
  display: block;
  background: #fff;
  padding: 0 15rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  
}
.head-img{
  width: 100%;
  height: 180rpx;
  margin: 20rpx 0;
}
.map_view{
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  top: 220rpx;
  bottom: 320rpx;
}
.map{
  width: 100%;  
  height: 100%;
}
.call{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  position: absolute;
  height: 220rpx;
  left: 0;
  right: 0;
  bottom: 100rpx;
}
.left,.right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.name{
  line-height: 60rpx;
}
.icon{
  height: 64rpx;
  width: 64rpx;
  animation: rotateAnimation 1s linear infinite;
}
.span{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #6B4F4E;
  animation: callMeAnimation 1s linear infinite;
}
.footer{
  height: 80rpx;
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
}

@-webkit-keyframes callMeAnimation{
  0% {
    font-size:24rpx;
  }
  50% {
    font-size: 26rpx;
  }
  100% {
    font-size: 24rpx;
  }
}

@-webkit-keyframes rotateAnimation {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(15deg);
  }
  50% {
    transform: rotate(0deg);
  }
  75% {
    transform: rotate(-15deg);
  }
  100% {
    transform: rotate(0deg);
  }
}